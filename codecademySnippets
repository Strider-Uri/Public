#turtle cube incomplete

import turtle

t = turtle.Turtle()

x=50
y=40

for i in range(0,5):
    t.forward(x)
    t.left(90) 
t.right(45)
t.forward(y)
t.left(45)
t.forward(x)
t.left(135)
t.forward(y)
t.back(y)
t.right(45)
t.forward(x)
t.left(45)
t.forward(y)
t.back(y)
t.left(45)
t.forward(x)
t.right(45)
t.forward(y)
t.back(y)
t.left(135)
t.forward(x)

#while loop logic
x = 0
while x != 5:
   x = input("Guess a number:")
   #accepts input but never allows 5 to exit loop as condition.
   #use:
   #x=int(input(“Guess a number:”))
   if x != 5:
      print("Incorrect choice")

print("Correct")

